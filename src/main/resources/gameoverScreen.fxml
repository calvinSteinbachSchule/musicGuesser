<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="710.0" prefWidth="830.0" stylesheets="@styleGameoverScreen.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameoverController">
   <children>
      <!-- GAME OVER Text - zentriert bei 830px Breite -->
      <Label layoutX="265.0" layoutY="150.0" prefWidth="300.0" styleClass="labelGameover" text="GAME OVER" alignment="CENTER" />

      <!-- Punktzahl Label - zentriert -->
      <Label layoutX="305.0" layoutY="280.0" prefHeight="30.0" prefWidth="220.0" text="Deine Punktzahl:" styleClass="scoreLabel" alignment="CENTER" />

      <!-- Score - zentriert -->
      <Label fx:id="labelFinalScoreId" layoutX="340.0" layoutY="330.0" prefHeight="50.0" prefWidth="150.0" text="0" styleClass="finalScore" />

      <!-- Name eingeben für Highscore -->
