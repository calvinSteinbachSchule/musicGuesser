      <Button onAction="#beendenButtonClicked" onMouseEntered="#buttonMouseEntered" layoutX="325.0" layoutY="625.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="180.0" styleClass="buttonGameover" text="Beenden" />
   </children>
</Pane>
