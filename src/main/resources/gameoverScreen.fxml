      <Label alignment="CENTER" layoutX="305.0" layoutY="327.0" prefHeight="25.0" prefWidth="200.0" styleClass="scoreLabel" text="Dein Name:" />
      <TextField fx:id="textFieldSpielerName" alignment="CENTER" layoutX="280.0" layoutY="378.0" prefHeight="40.0" prefWidth="250.0" promptText="z.B: Noob" styleClass="textBoxSpielerName" />
