      <Button layoutX="305.0" layoutY="621.0" mnemonicParsing="false" onAction="#beendenButtonClicked" onMouseEntered="#buttonMouseEntered" prefHeight="53.0" prefWidth="200.0" styleClass="buttonGameover" text="Beenden" />
   </children>
