<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="710.0" prefWidth="830.0" stylesheets="@styleGameoverScreen.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameoverController">
   <children>
      <!-- GAME OVER Text - zentriert bei 830px Breite -->
      <Label alignment="CENTER" layoutX="255.0" layoutY="111.0" prefWidth="300.0" styleClass="labelGameover" text="GAME OVER" />

      <!-- Punktzahl Label - zentriert -->
      <Label alignment="CENTER" layoutX="295.0" layoutY="222.0" prefHeight="30.0" prefWidth="220.0" styleClass="scoreLabel" text="Deine Punktzahl:" />

      <!-- Score - zentriert -->
      <Label fx:id="labelFinalScoreId" layoutX="330.0" layoutY="257.0" prefHeight="50.0" prefWidth="150.0" styleClass="finalScore" text="0" />

